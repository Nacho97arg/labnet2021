@model List<Lab.MVC.Models.SupplierView>
@{ 
    ViewBag.Title = "Suppliers";
}

<h1>Pagina de Suppliers</h1>
<nav>
    @Html.ActionLink("Insert new supplier","Insert",null, new {@class = "btn btn-primary"})
</nav>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Supplier ID</th>
            <th scope="col">Company Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col" colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Lab.MVC.Models.SupplierView item in Model)
        {
            <tr>
                <td>@item.SupplierID</td>
                <td>@item.CompanyName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>                
                    @Html.ActionLink("Modify", "Update", new { id = item.SupplierID }, new { @class = "btn btn-warning" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>